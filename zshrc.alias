
# grep
alias grep='/bin/grep --color'
alias egrep='/bin/egrep --color'
alias xgrep='/bin/grep -P --color'
alias ipgrep='xgrep "(\d+\.){3}\d+"'
alias fgrep='/bin/fgrep --color'
alias g='xgrep'
alias go='xgrep -o'
alias igrep='g -i'
alias rgrep='g -v "^#|^$"'

# -g grep
alias -g G='|& grep -aP'
alias -g GF='|& grep -af'
alias -g GFV='|& grep -avf'
alias -g GVF='|& grep -avf'
alias -g GI='G -i'
alias -g GV='G -v'
alias -g GVV='|& /bin/grep -Pv "^\s*(#|$)"'
alias -g GO='G -o'
alias -g Go='G -o'
alias -g G-='|&/bin/grep -P -a "^-(?!-)"'
alias -g G+='|&/bin/grep -P -a "^\+(?!\+)"'
alias -g G++='|&/bin/egrep -a "^[+-][^+-]"'
alias -g G+++='G++ PE "s/^.//"'
alias -g FG='|& fgrep -a'
alias -g FGV='FG -v'

